<Window
    x:Class="WordHunt.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WordHunt"
    Title="Word Hunter Game">
    <Grid Padding="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Titre -->
            <RowDefinition Height="Auto"/>
            <!-- Sous-titre -->
            <RowDefinition Height="Auto"/>
            <!-- Search -->
            <RowDefinition Height="*"/>
            <!-- Contenu principal -->
        </Grid.RowDefinitions>

        <!-- === TITRE === -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,20,0,10">
            <TextBlock Text="WORD HUNTER" 
                       FontSize="48" 
                       FontWeight="Bold"
                       FontFamily="Segoe UI Variable"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="GAME"
                       FontSize="28"
                       FontWeight="SemiBold"
                       Foreground="Gray"
                       HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- === SOUS-TITRE === -->
        <TextBlock Grid.Row="1" 
                   Text="Trouvez tous les mots cachés dans le dictionnaire !"
                   FontSize="18"
                   FontStyle="Italic"
                   Foreground="Gray"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,30"/>

        <!-- === BARRE DE RECHERCHE + BOUTON === -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
            <TextBox x:ConnectionId='7' x:Name="SearchBox" Width="300" Height="40"
                     CornerRadius="8"
                     Background="White"
                     Padding="10"
                     PlaceholderText="Tapez un mot..."/>
            <Button x:ConnectionId='8' Content="Check" Width="100" Height="40"
                    Foreground="White" 
                    CornerRadius="8"
                    Margin="10,0,0,0"
                                       />
        </StackPanel>

        <TextBlock x:ConnectionId='2' Grid.Row="2" x:Name="ErrorMessage" Foreground="Red" HorizontalAlignment="Center" Margin="0,50,0,0"/>

        <!-- === CONTENU PRINCIPAL === -->
        <Grid Grid.Row="3" Margin="0,30,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Liste des mots trouvés -->
            <StackPanel Grid.Column="0" Margin="20">
                <TextBlock Text="Derniers mots trouvés" FontWeight="Bold" FontSize="20" Margin="0,0,0,10"/>
                <ListBox x:ConnectionId='5' x:Name="FoundWordsList" Height="300" Background="White" CornerRadius="8"/>
                <TextBlock x:ConnectionId='6' x:Name="Counter" FontWeight="Bold" FontSize="16" Margin="0,10,0,0"/>
            </StackPanel>

            <!-- Donut graphique -->
            <Grid Grid.Column="1" Width="300" Height="300" HorizontalAlignment="Center">
                <!-- Fond donut gris -->
                <Ellipse Stroke="LightGray" StrokeThickness="30"/>

                <!-- Arc de progression -->
                <Path x:ConnectionId='3' x:Name="ProgressArc" StrokeThickness="30"/>

                <!-- Pourcentage au centre -->
                <TextBlock x:ConnectionId='4' x:Name="ProgressPercent" 
               Text="0%" 
               FontSize="36" 
               FontWeight="Bold" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Center"/>
            </Grid>


        </Grid>
    </Grid>
</Window>

